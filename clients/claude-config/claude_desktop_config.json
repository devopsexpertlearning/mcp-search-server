{
  "mcpServers": {
    "browser-search-ollama": {
      "command": "node",
      "args": ["/absolute/path/to/your/project/dist/servers/OllamaServer.js"],
      "env": {
        "NODE_ENV": "production",
        "OLLAMA_BASE_URL": "http://localhost:11434",
        "OLLAMA_DEFAULT_MODEL": "llama2",
        "LOG_LEVEL": "info",
        "CACHE_TTL": "7200000"
      }
    },
    "browser-search-enhanced": {
      "command": "node",
      "args": ["/absolute/path/to/your/project/dist/servers/EnhancedServer.js"],
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info",
        "CACHE_TTL": "3600000",
        "REDIS_URL": "redis://localhost:6379"
      }
    },
    "browser-search-fallback": {
      "command": "node",
      "args": ["/absolute/path/to/your/project/dist/servers/FallbackServer.js"],
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "warn"
      }
    }
  },
  "globalShortcuts": {
    "search": "Cmd+Shift+S",
    "chat": "Cmd+Shift+C"
  }
}